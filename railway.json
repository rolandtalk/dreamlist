{
  "$schema": "https://railway.app/schema.json",
  "build": {
    "builder": "NIXPACKS",
    "nixpacksConfig": {
      "python": "3.11",
      "apt": ["chromium", "chromedriver", "libglib2.0-0", "libnss3", "libgbm1"]
    }
  },
  "deploy": {
    "numReplicas": 1,
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10
  }
}
